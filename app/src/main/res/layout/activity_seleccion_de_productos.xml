<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pizarra"
    tools:context="com.programacion3.androidlatte.cafeteria_androidlatte.UI.Activities.SeleccionDeProductosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/redChalk"
            android:textSize="@dimen/titleText" />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/precioSeleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Precio:"
            android:textColor="@color/purpleChalk"
            android:textSize="@dimen/mediumText" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n:"
            android:textColor="@color/yellow2Chalk"
            android:textSize="@dimen/mediumText" />

        <TextView
            android:id="@+id/ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blueChalk"
            android:textSize="@dimen/mediumText" />


        <Button
            android:id="@+id/enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/bigText"
            android:background="@color/yellowChalk"
            android:text="ENVIAR"
            android:onClick="click"
            android:textSize="@dimen/bigTextBoton" />

    </LinearLayout>

</ScrollView>
