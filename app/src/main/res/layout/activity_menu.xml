<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pizarra"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.programacion3.androidlatte.cafeteria_androidlatte.LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/Menu"
        android:textColor="@color/colorText"
        android:textSize="@dimen/titleText"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/desayuno"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="121dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/smooth_square"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/sandwich"
            android:onClick="click"
            android:text="@string/Desayuno"
            android:textColor="#ffff"
            android:textSize="@dimen/mediumText"

            android:textStyle="bold" />

        <Button
            android:id="@+id/almuerzo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="121dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/smooth_square"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/pollo"
            android:onClick="click"
            android:text="@string/Almuerzo"
            android:textColor="#ffff"
            android:textSize="@dimen/mediumText"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/merienda"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="121dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/smooth_square"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/merienda"
            android:onClick="click"
            android:text="@string/Merienda"
            android:textColor="#ffff"
            android:textSize="@dimen/mediumText"
            android:textStyle="bold" />

        <Button
            android:id="@+id/combos"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="121dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/smooth_square"
            android:drawableTop="@drawable/combos"
            android:onClick="click"
            android:text="@string/Combos"
            android:textColor="#ffff"
            android:textSize="@dimen/mediumText"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/snacks"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="@dimen/bigTextBoton"
        android:drawableLeft="@drawable/croissant"
        android:drawableRight="@drawable/yogurt"
        android:background="@drawable/smooth_square"
        android:onClick="click"
        android:text="@string/Snacks"
        android:textColor="#ffff"
        android:textSize="@dimen/mediumText"
        style="@style/Widget.AppCompat.Button.Borderless"/>


</LinearLayout>

