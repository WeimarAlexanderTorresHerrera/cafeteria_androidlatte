<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pizarra"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.programacion3.androidlatte.cafeteria_androidlatte.UI.Activities.LoginActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textColor="@color/orangeChalk"
        android:textSize="@dimen/titleText" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:hint="@string/UsuarioOCodigo"
        android:singleLine="true"
        android:textStyle="italic"
        android:textColor="@color/whiteChalk"
        android:textColorHint="@color/colorTextHint"
        android:textSize="@dimen/mediumText" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/ContraseÃ±a"
        android:inputType="textPassword"
        android:maxLength="3"
        android:singleLine="true"
        android:textColor="@color/colorEscribir"
        android:textColorHint="@color/whiteChalk"
        android:textSize="@dimen/mediumText"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/checkboxLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="start"
        android:textColor="@color/colorText"
        android:text="@string/Recuerdame" />

    <Button
        android:id="@+id/enter"
        android:onClick="click"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="35dp"
        android:background="@color/yellowChalk"
        android:text="@string/Entrar"
        android:textSize="@dimen/mediumText" />

    <TextView
        android:id="@+id/New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="@string/Nuevo"
        android:textColor="@color/turquoiseChalk"
        android:textSize="@dimen/mediumText" />

</LinearLayout>
